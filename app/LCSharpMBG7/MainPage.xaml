<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LCSharpMBG7.MainPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="Black">

    <Grid>
        <Image Source="finalmain.png"
               Aspect="AspectFill" />
        <Grid VerticalOptions="End" Padding="20" Margin="0,0,0,120">
            <Button Text="Continuar"
                    x:Name="BtnContinuar"
                    BackgroundColor="Black"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50"
                    Clicked="BtnContinuar_Clicked" />
        </Grid>
        <Image Source="mercedeslogo.png"
               HeightRequest="40"
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,0,0,75">
            <Image.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="LogInAdmin" />
            </Image.GestureRecognizers>
        </Image>
    </Grid>
</ContentPage>
