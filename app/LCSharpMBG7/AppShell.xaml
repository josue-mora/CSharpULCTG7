<Shell
    x:Class="LCSharpMBG7.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LCSharpMBG7"
    xmlns:views="clr-namespace:LCSharpMBG7.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="LCSharpMBG7">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <ShellContent Title="TestRoom" ContentTemplate="{DataTemplate local:Views.TestRoom}" Route="TestRoom" />
    <ShellContent Title="VehicleDetails" ContentTemplate="{DataTemplate local:Views.VehicleDetails}" Route="VehicleDetails" />
    <ShellContent Title="FirebaseDataPage" ContentTemplate="{DataTemplate local:Views.FirebaseDataPage}" Route="FirebaseDataPage" />
    <ShellContent Title="ReservationForm" ContentTemplate="{DataTemplate local:Views.ReservationForm}" Route="ReservationForm" />


    <ShellContent
        Title="Catálogo de AMG"
        ContentTemplate="{DataTemplate views:CarruselAutosPage}"
        Route="CarruselAutosPage" />

    <!-- Otras páginas con rutas únicas -->
    <ShellContent Title="Vehiculos"
              ContentTemplate="{DataTemplate views:Vehiculos}"
              Route="Vehiculos" />

    <ShellContent Title="Cotizador"
              ContentTemplate="{DataTemplate views:Cotizador}"
              Route="Cotizador" />

    <ShellContent Title="Sucursales"
              ContentTemplate="{DataTemplate views:Sucursales}"
              Route="Sucursales" />

    <ShellContent Title="Login Admin"
            ContentTemplate="{DataTemplate views:LogInAdmin}"
            Route="LogInAdmin"/>

    <ShellContent Title="Admin Dashboard"
            ContentTemplate="{DataTemplate views:AdminDashboard}"
            Route="AdminDashboard"/>

    <ShellContent Title="Vehículos Admin"
            ContentTemplate="{DataTemplate views:VehiculosAdmin}"
            Route="VehiculosAdmin"/>

    <ShellContent Title="Detalle Vehículo"
            ContentTemplate="{DataTemplate views:VehiculoAdminDetail}"
            Route="VehiculoAdminDetail"/>

    <ShellContent Title="Reservas Admin"
            ContentTemplate="{DataTemplate views:ReservasAdmin}"
            Route="ReservasAdmin"/>

    <ShellContent Title="Detalle Reserva"
            ContentTemplate="{DataTemplate views:ReservaAdminDetail}"
            Route="ReservaAdminDetail"/>

    <ShellContent
        Title="AMG GLE"
        ContentTemplate="{DataTemplate views:AmgGle}"
        Route="AmgGle"/>

    <ShellContent
        Title="AMG GLC"
        ContentTemplate="{DataTemplate views:AmgGlc}"
        Route="AmgGlc"/>

    <ShellContent
        Title="AMG Clase C"
        ContentTemplate="{DataTemplate views:AmgClaseC}"
        Route="AmgClaseC"/>

    <ShellContent
        Title="Vehiculos"
        ContentTemplate="{DataTemplate views:Vehiculos}"
        Route="AmgClaseC"/>

    <ShellContent
        Title="Cotizador"
        ContentTemplate="{DataTemplate views:Cotizador}"
        Route="AmgClaseC"/>

    <ShellContent
        Title="Sucursales"
        ContentTemplate="{DataTemplate views:Sucursales}"
        Route="AmgClaseC"/>

</Shell>
